//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
#include "List.h"
#include "Question.h"
#include "UnitMain.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
TStringList *stringList = new TStringList;
List *list = new List;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	Question tempQuest;
	stringList->LoadFromFile("Questions.txt");
	int i = 0;
	while (i < stringList->Count)
	{
		tempQuest.SetQuestion(stringList->Strings[i]);
		i++;
		tempQuest.SetImage(stringList->Strings[i]);
		i++;
		for (int j = 0; j < 4; j++, i++)
		{
			tempQuest.SetAnswer(stringList->Strings[i], j);
		}
		tempQuest.SetRight(stringList->Strings[i]);
		i++;
		list[0].push(tempQuest);
	}
}
//---------------------------------------------------------------------------

